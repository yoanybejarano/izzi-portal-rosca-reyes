<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-12">
            <h1>Autenticación</h1>
        </div>
    </div>
</div>

<form method="post" action="/login">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="ctrl-holder">
                    <label for="email">Correo</label>
                    <input type="email" name="email" id="email" required="">
                </div>
            </div>
            <div class="col-md-4">
                <div class="ctrl-holder">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" id="password" required="">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <button class="button pink expand mt-0" type="submit">Entrar</button>
            </div>
        </div>
    </div>
</form>